<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvFoto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/card_foto_size"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivFotoFoto"
            android:layout_width="@dimen/card_foto_size"
            android:layout_height="@dimen/card_foto_size"
            android:src="@drawable/b"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvNumeroFoto"
                android:layout_width="@dimen/card_foto_half_size"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="@dimen/card_foto_text_size"
                android:layout_marginRight="@dimen/card_foto_margin"
                android:gravity="center|right"/>

            <ImageView
                android:layout_width="@dimen/card_foto_hueso_size"
                android:layout_height="@dimen/card_foto_hueso_size"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/card_foto_margin"
                android:src="@drawable/huesoamarillo"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
